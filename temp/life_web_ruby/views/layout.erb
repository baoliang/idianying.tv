	<div class="wrap">
		<div class="container" >
			<div  class="top">	
				<div>
          <a href="/">
            <img src="<%=settings.static_url%>/images/logo.png" class="logo">
					</a>  
          
          <form action="/" class="inline search_form search_input">

            <input  name="fuck_g_0f0_w" value="<%=params[:fuck_g_0f0_w]%>" placeholder="电影、影人、电视剧" class="search-query input-large ">

						<input type="submit" class="btn"   value="搜索">
					</form>
          <% if session[:email]%>
          <span id="user_info" class="user_name">
              <%=session[:name]%>
            </span>
            <span class="user_info">
              <a href="/logout">退出</a>
          </span>
          <%else%>
          <span id="user_info" class="hide">
              <span id="user_name" class="user_name">
              
              </span>
              <span class="user_info">
                <a href="/logout">退出</a>
              </span>
          </span>
          <span id="user_login"  class="user_info">想要加入？
            <a href="#login" data-toggle="modal">
              登录
            </a>
              或
            <a href="#login" data-toggle="modal">
              注册
            </a>
             只需几秒
          </span>
          <%end%>
				</div>
     <ul class="nav nav-tabs" ng-controller="MenuCtr">
  
       <%settings.menus.each do |m|%>
        <li class="<%if session['active'] == m[0]%>
            active
                  <%end%>
          " >
          <a href="<%=m[1]%>"><%=m[0]%></a>
        </li>
        <%end%>
      
    </ul>
			
			</div>

    
      <div>
        <%=yield%>
